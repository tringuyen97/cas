{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "$": false,
    "urls": true
  },
  "rules": {
    "linebreak-style": [0, "error", "windows"],
    "indent": [
      "error",
      4
    ],
    
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
